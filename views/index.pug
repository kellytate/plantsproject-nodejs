                //-   div.form-group
                //-     button.btn.btn-primary(type='Submit', style='background-color: #1e1e1e; border: none') clear all entries




            .flex-child.two
              div.thetable
                table.table
                  if plants
                    thead
                      tr
                        th ID
                        th Nickname
                        th Common Name
                        th Scientific Name
                        th Date Watered
                        th Date To Water
                      tbody
                        for plant in plants
                          tr
                            td= plant.id
                            td= plant.nickname 
                            td= plant.commonname 
                            td= plant.scientificname 
                            td= plant.datelastwatered
                            td= plant.datetowater 
                      td
                      td 
                      tr
                  else
                    tr 
                    td 
                      | No plants found
                form(action="/delete", method="POST")
                  label(for='id') delete entry by plant ID:
                  div.form-group
                    div(class='d-flex justify-content-center')
                      //- div(class='p-2')
                      //-   label(for='id') Delete by Plant ID:
                      div(class='p-2')
                        input#id.form-control(type='number', placeholder='ID', name='id', style='width: 100px')
                      div(class='p-2')
                        button.btn.btn-primary(type='Submit', style='background-color: #1e1e1e; border: none') delete                  
                br
                br
              
                form(action="/reset", method="POST")
                  div.form-group
                    button.btn.btn-primary(type='Submit', style='background-color: #1e1e1e; border: none; width: 180px') clear all entries
              
            