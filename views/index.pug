extends layout

block content
  .container
    .content
      if error
        .alert.alert-danger
        h1 Error!
      else
        br
        center
          h1 Plants!
          br
          .flex-container(style='display:flex')
            .flex-child.one(style='flex:1')     
              div.theform
                br
                p create or update plant:
              
                form(action="/update", method="POST", style='width:300px')
                  div.form-group

                  //- label(for='nickname') Nickname:
                  input#nickname.form-control(type='text', length='100', placeholder='nickname', name='nickname', required, style='background-color: transparent;')
                  br
                  //- label(for='common name') Common Name:
                  input#commonname.form-control(type='text', placeholder='common name' name='commonname', style='background-color: transparent;')
                  br
                  //- label(for='scientific name') Scientific Name:
                  input#scientificname.form-control(type='text', placeholder='scientific name', name='scientificname', style='background-color: transparent;')
                  br
                  label(for='datelastwatered') date watered:
                  input#datelastwatered.form-control(type='date', placeholder='date watered', name='datelastwatered', style='background-color: transparent;')
                  br
                  label(for='datetowater') date to water:
                  input#datetowater.form-control(type='date', placeholder='date to water', name='datetowater', style='background-color: transparent;')
                  br
                  button.btn.btn-primary(type='Submit', style='background-color: #1e1e1e; border: none') submit
                  br
                  br
                  br

