extends layout

block content
  .container
    .content
      if error
        .alert.alert-danger
      else
        table.table.table-striped.table-bordered.table-hover
          if plants
            thead
              tr
                th id
                th Scientific Name
                th Common Name
                th Nickname
                th Date Watered
                th Date To Water
              tbody
                for plant in plants
                  tr
                    td= plant.id
                    td= plant.scientificname 
                    td= plant.commonname 
                    td= plant.nickname 
                    td= plant.datelastwatered
                    td= plant.datetowater 
          else
            tr 
              td 
                | No plants found