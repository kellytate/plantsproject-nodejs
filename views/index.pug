extends layout

block content
  .container
    .content
      if error
        .alert.alert-danger
      else
        table.table.table-striped.table-bordered.table-hover
          if plants
            thead
              tr
                th id
                th Scientific Name
                th Common Name
                th Nickname
                th Date Watered
                th Date To Water
              tbody
                for plant in plants
                  tr
                    td= plant.id
                    td= plant.scientificname 
                    td= plant.commonname 
                    td= plant.nickname 
                    td= plant.datelastwatered
                    td= plant.datetowater 
              td
              td 
              tr
              form(action="/update", method="POST")
                div.form-group
                label(for='scientific name') Scientific Name:
                input#scientificname.form-control(type='text', placeholder='Scientific Name' name='scientificname')
                button.btn.btn-primary(type='submit') Submit



              //- form(action="/update", method="POST")
